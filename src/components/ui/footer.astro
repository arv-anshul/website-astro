---
import { Icon } from "astro-icon/components";
import Button from "@/components/starwind/button";
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props as Props;

const copyrightYear = new Date().getFullYear();
const linkItems = [
  {
    url: "/v2/resume",
    title: "Resume",
    icon: "lucide:scroll-text",
  },
  {
    url: "/v2/rss.xml",
    title: "RSS Feed",
    icon: "lucide:rss",
  },
  {
    url: "https://linkedin.com/in/arv-anshul",
    title: "LinkedIn",
    icon: "simple-icons:linkedin",
  },
  {
    url: "https://github.com/arv-anshul",
    title: "GitHub",
    icon: "simple-icons:github",
  },
];
---

<footer class={cn("bg-accent/50 px-4 md:px-0 py-3 text-sm", className)}>
  <div class="flex justify-between items-center w-full md:w-6/8 mx-auto">
    <div class="flex flex-col">
      <span>
        Copyright &copy; {copyrightYear}
        <span class="text-muted-foreground font-bold">Anshul Raj Verma</span>
      </span>
      <span>
        Made with
        <span class="animate-pulse text-red-500 text-lg align-middle">
          &hearts;
        </span>
      </span>
    </div>
    <div class="flex">
      {linkItems.map((item) => (
        <Button href={item.url} size="icon" variant="ghost" title={item.title}>
            <Icon name={item.icon} title={item.title} />
        </Button>
      ))}
    </div>
  </div>
</footer>
