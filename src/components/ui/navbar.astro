---
// Component from https://tailkits.com/ui/free/
import { Icon } from "astro-icon/components";
import OmSvg from "public/favicon.svg";

// Props
interface Props {
  sticky?: boolean;
}

const { sticky = false } = Astro.props;

// Define your navigation links here
const homeLink = {
  href: "/",
  title: "ARV",
  src: "/favicon.svg",
  alt: "Om Logo",
};

const middleLinks = [
  { href: "/projects", title: "Projects", icon: "lucide:rocket" },
  { href: "/blog", title: "Blog", icon: "lucide:newspaper" },
];

const endLinks = [
  { href: "/resume", title: "Resume", icon: "lucide:scroll-text" },
  { href: "#", title: "GitHub", icon: "lucide:github" },
];
---

<header
  class:list={[
    "backdrop-blur-sm",
    sticky? "sticky top-3 z-40" : "py-3"
  ]}
>
  <div class="max-w-7xl mx-auto px-4 xl:px-0">
    <div
      class="flex items-center justify-between gap-x-4 rounded-2xl py-2.5 pl-5 pr-2.5 shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)] lg:grid lg:grid-cols-[1fr_auto_1fr] lg:justify-stretch lg:gap-x-12 lg:rounded-[1.375rem]"
    >
      <!-- Home/Logo -->
      <div class="flex items-center">
        <a
          href={homeLink.href}
          title={homeLink.title}
          class="flex items-center gap-1"
        >
          <!-- <Image src={homeLink.src} alt={homeLink.alt} width="24" height="24" class="fill-black bg-black text-black stroke-black"/> -->
          <OmSvg
            class="fill-black stroke-black"
            fill="black"
            height="30"
            width="30"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:block">
        <ul class="flex items-center">
          {middleLinks.map((link) => (
            <li>
              <a
                class="flex rounded-2xl items-center gap-x-2 px-3 py-2 text-sm font-medium text-neutral-700 transition hover:text-black"
                href={link.href}
              >
                <Icon name={link.icon} class="w-4 h-4" />
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- End Links (Desktop Icons) -->
      <div class="flex items-center gap-x-10 justify-self-end">
        <div class="flex items-center gap-x-2">
          {endLinks.map((link) => (
            <a
              href={link.href}
              title={link.title || link.title}
              class="hidden lg:flex items-center justify-center p-2.5 text-sm font-medium transition-all focus:shadow-[0_0px_0px_2px_rgba(15,23,42,0.25),0_2px_10px_0px_rgba(0,0,0,0.05)] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] border border-neutral-100 bg-white text-neutral-700 hover:border-neutral-200 hover:bg-neutral-100 disabled:border-slate-900/5 disabled:bg-slate-50/30 disabled:text-slate-900/20 rounded-[0.625rem]"
            >
              <Icon name={link.icon} class="w-5 h-5" />
            </a>
          ))}

          <!-- Mobile Menu Button -->
          <button
            type="button"
            id="mobile-menu-button"
            aria-title="Open menu"
            class="lg:hidden p-2"
            title="Open menu"
          >
            <Icon name="lucide:menu" class="w-6 h-6 text-slate-500" />
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-50 hidden bg-black/50 lg:hidden"
    aria-hidden="true"
  >
    <div
      class="fixed right-0 top-0 h-full w-full max-w-sm bg-white shadow-xl transform transition-transform duration-300 ease-in-out"
    >
      <div class="flex flex-col ">
        <!-- Mobile Menu Header -->
        <div
          class="flex items-center justify-between p-4 border-b border-neutral-200"
        >
          <a
            href={homeLink.href}
            title={homeLink.title}
            class="flex items-center gap-1"
          >
            <!-- <Image src={homeLink.src} alt={homeLink.alt} width="24" height="24" class="fill-black bg-black text-black stroke-black"/> -->
            <OmSvg
              class="fill-black stroke-black"
              fill="black"
              height="30"
              width="30"
            />
          </a>
          <button
            type="button"
            id="mobile-menu-close"
            aria-title="Close menu"
            class="p-2 text-neutral-700"
          >
            <Icon name="lucide:x" class="w-6 h-6" />
          </button>
        </div>

        <!-- Mobile Menu Links -->
        <nav
          class="flex-1 overflow-y-auto p-4 bg-white rounded-bl-xl border-neutral-300 border"
        >
          <ul class="space-y-2">
            {middleLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="flex items-center gap-x-3 px-4 py-3 text-base font-medium text-neutral-700 rounded-lg transition hover:bg-neutral-100"
                >
                  <Icon name={link.icon} class="w-5 h-5" />
                  {link.title}
                </a>
              </li>
            ))}
          </ul>

          <!-- Mobile End Links -->
          <div class="mt-6 pt-6 border-t border-neutral-200 space-y-2">
            {endLinks.map((link) => (
              <a
                href={link.href}
                class="flex items-center gap-x-3 w-full px-4 py-3 text-sm font-medium text-neutral-700 bg-neutral-100 rounded-lg transition hover:bg-neutral-200"
              >
                <Icon name={link.icon} class="w-5 h-5" />
                {link.title}
              </a>
            ))}
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const menuButton = document.getElementById("mobile-menu-button");
  const menuClose = document.getElementById("mobile-menu-close");
  const mobileMenu = document.getElementById("mobile-menu");

  function openMenu() {
    if (mobileMenu) {
      mobileMenu.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    }
  }

  function closeMenu() {
    if (mobileMenu) {
      mobileMenu.classList.add("hidden");
      document.body.style.overflow = "";
    }
  }

  // Event listeners
  menuButton?.addEventListener("click", openMenu);
  menuClose?.addEventListener("click", closeMenu);

  // Close menu when clicking outside
  mobileMenu?.addEventListener("click", (e) => {
    if (e.target === mobileMenu) {
      closeMenu();
    }
  });

  // Close menu on escape key
  document.addEventListener("keydown", (e) => {
    if (
      e.key === "Escape" &&
      mobileMenu &&
      !mobileMenu.classList.contains("hidden")
    ) {
      closeMenu();
    }
  });

  // Close menu when navigating (for same-page links)
  const mobileMenuLinks = mobileMenu?.querySelectorAll("a");
  for (const link of mobileMenuLinks || []) {
    link.addEventListener("click", () => {
      setTimeout(closeMenu, 100);
    });
  }
</script>

<style>
  /* Prevent scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }
</style>
