---
// Component from https://tailkits.com/ui/free/
import { Icon } from "astro-icon/components";
import OmSvg from "public/favicon.svg";
import { ThemeToggle } from "@/components/starwind/theme-toggle";
import Button from "../starwind/button";

// Props
interface Props {
  sticky?: boolean;
}

const { sticky = false } = Astro.props;

// Define your navigation links here
const homeLink = {
  href: "/v2",
  title: "ARV",
  src: "/favicon.svg",
  alt: "Om Logo",
};

const middleLinks = [
  { href: "/v2/projects", title: "Projects", icon: "lucide:rocket" },
  { href: "/v2/blog", title: "Blog", icon: "lucide:newspaper" },
];

const endLinks = [
  { href: "/v2/resume", title: "Resume", icon: "lucide:scroll-text" },
  {
    href: "https://github.com/arv-anshul",
    title: "GitHub",
    icon: "lucide:github",
  },
];
---

<header
  class:list={[
    "backdrop-blur-sm",
    sticky? "sticky top-3 z-40" : "py-3"
  ]}
>
  <div class="max-w-7xl mx-auto px-4 xl:px-0">
    <div
      class="flex items-center justify-between gap-x-4 rounded-lg py-1 pl-5 pr-2.5 border border-foreground/3 shadow-foreground/50 shadow-xl/10 bg-foreground/10 lg:grid lg:grid-cols-[1fr_auto_1fr] lg:justify-stretch lg:gap-x-12"
    >
      <!-- Home/Logo -->
      <div class="flex items-center">
        <a
          href={homeLink.href}
          title={homeLink.title}
          class="flex items-center gap-1"
        >
          <OmSvg
            class="fill-foreground stroke-foreground"
            height="30"
            width="30"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:block">
        <ul class="flex items-center">
          {middleLinks.map((link) => (
            <li>
              <a
                class="flex items-center gap-x-2 px-3 py-2 font-medium text-foreground"
                href={link.href}
              >
                <Icon name={link.icon} />
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- End Links (Desktop Icons) -->
      <div class="flex items-center gap-x-10 justify-self-end">
        <div class="flex items-center gap-x-2">
          {endLinks.map((link) => (
            <Button
              href={link.href}
              title={link.title || link.title}
              variant="ghost"
              size="icon"
            >
              <Icon name={link.icon}/>
            </Button>
          ))}

          <ThemeToggle size="sm" />

          <!-- Mobile Menu Button -->
          <Button
            type="button"
            id="mobile-menu-button"
            aria-title="Open menu"
            class="lg:hidden"
            title="Open menu"
            variant="outline"
            size="icon"
          >
            <Icon name="lucide:menu" />
          </Button>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-50 hidden bg-black/50 lg:hidden"
    aria-hidden="true"
  >
    <div
      class="fixed right-0 top-0 h-full w-full max-w-sm shadow-xl transform transition-transform duration-300 ease-in-out"
    >
      <div class="flex flex-col ">
        <!-- Mobile Menu Header -->
        <div class="flex items-center justify-between p-4 border-b">
          <a
            href={homeLink.href}
            title={homeLink.title}
            class="flex items-center gap-1"
          >
            <OmSvg
              class="fill-forstroke stroke-foreground"
              height="30"
              width="30"
            />
          </a>
          <Button
            type="button"
            id="mobile-menu-close"
            aria-title="Close menu"
            variant="ghost"
            size="icon"
          >
            <Icon name="lucide:x" />
          </Button>
        </div>

        <!-- Mobile Menu Links -->
        <nav
          class="flex-1 overflow-y-auto p-4 bg-background rounded-bl-xl border"
        >
          <ul class="space-y-2">
            {middleLinks.map((link) => (
              <li>
                <Button
                  href={link.href}
                  class="w-full border"
                  variant="ghost"
                >
                  <Icon name={link.icon} />
                  {link.title}
                </Button>
              </li>
            ))}
          </ul>

          <!-- Mobile End Links -->
          <div class="mt-6 pt-6 border-t space-y-2">
            {endLinks.map((link) => (
              <Button
                href={link.href}
                class="w-full"
                variant="outline"
              >
                <Icon name={link.icon} />
                {link.title}
              </Button>
            ))}
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const menuButton = document.getElementById("mobile-menu-button");
  const menuClose = document.getElementById("mobile-menu-close");
  const mobileMenu = document.getElementById("mobile-menu");

  function openMenu() {
    if (mobileMenu) {
      mobileMenu.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    }
  }

  function closeMenu() {
    if (mobileMenu) {
      mobileMenu.classList.add("hidden");
      document.body.style.overflow = "";
    }
  }

  // Event listeners
  menuButton?.addEventListener("click", openMenu);
  menuClose?.addEventListener("click", closeMenu);

  // Close menu when clicking outside
  mobileMenu?.addEventListener("click", (e) => {
    if (e.target === mobileMenu) {
      closeMenu();
    }
  });

  // Close menu on escape key
  document.addEventListener("keydown", (e) => {
    if (
      e.key === "Escape" &&
      mobileMenu &&
      !mobileMenu.classList.contains("hidden")
    ) {
      closeMenu();
    }
  });

  // Close menu when navigating (for same-page links)
  const mobileMenuLinks = mobileMenu?.querySelectorAll("a");
  for (const link of mobileMenuLinks || []) {
    link.addEventListener("click", () => {
      setTimeout(closeMenu, 100);
    });
  }
</script>

<style>
  /* Prevent scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }
</style>
